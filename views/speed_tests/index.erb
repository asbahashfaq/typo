<h1>hello world</h1>
<% if logged_in? %>
    <h2>Logged in user: <%= current_user()['first_name'] %></h2>
    <form action="/sessions" method="POST">
    <input type="hidden" name="_method" value="delete">
        <button>Sign Out</button>
    </form>
    <a href="/history">My Past Attempts</a>
<% else %>
    <a href="/sign_up">Sign up</a>
    <a href="/sign_in">Sign in</a>
<% end %>
<section>
    <p>Start typing</p>
    <div class="typing_area">
        <input id="key_catcher"></textarea>
        <div class="test_tracker"><span class="done"></span><span class="todo"><%=paragraph%></span></div>
        
    </div> 
    
</section>